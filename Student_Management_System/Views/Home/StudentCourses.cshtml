@model IEnumerable<Student_Management_System.Models.StudentCoursesModel>

@{
    ViewBag.Title = "StudentCourses";
}


@foreach (var item in Model)
{
    <h2>@Html.DisplayFor(modelItem => item.FirstName)  @Html.DisplayFor(modelItem => item.LastName) - Courses</h2>
    break;
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClassRoom)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassRoom)
            </td>
            <td>
                @Html.ActionLink("Delete", "DeleteCourse", new { CourseID = item.CoursesID, StudentID = item.StudentID })
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Back to List", "Students")
</div>
